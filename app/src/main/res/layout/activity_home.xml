<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/colorbackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/logOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_cierre_sesion_24" />

        <TextView
            android:id="@+id/emailview"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="TextView" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <TextView
            android:id="@+id/providerview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Proveedor" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/songimage_id"
                android:layout_width="match_parent"
                android:layout_height="320sp"
                android:layout_marginTop="8sp"
                android:src="@drawable/ic_music_note_320"></ImageView>/>


            <TextView
                android:id="@+id/song_name"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold"

                ></TextView>

            <TextView
                android:id="@+id/artista"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="bold"

                ></TextView>

            <TextView
                android:id="@+id/album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"

                ></TextView>
            <TextView
                android:id="@+id/genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"

                ></TextView>



        </LinearLayout>
        <com.google.android.exoplayer2.ui.PlayerControlView
            android:id="@+id/playerview"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:hide_on_touch="false"
            app:show_timeout="0">

        </com.google.android.exoplayer2.ui.PlayerControlView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>